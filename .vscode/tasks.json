{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build project",
            "command": "make",
            "args": [
                "all",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "Build unit test",
            "command": "make",
            "args": [
                "unit_testing",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
        }
    ],
    "version": "2.0.0"
}